{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "build",
		"declaration": true,
		"declarationDir": "build",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"lib": [
			"ES2020",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"spec"
	]
}
